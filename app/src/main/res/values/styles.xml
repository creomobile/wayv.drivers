<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/appPurple</item>
        <item name="colorPrimary">@color/appPurple</item>
        <item name="colorPrimaryDark">@color/appPurple</item>
        <item name="colorAccent">@color/appPurple</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/appPurple</item>
        <item name="colorPrimaryDark">@color/appPurple</item>
        <item name="colorAccent">@color/appPurple</item>
    </style>

</resources>
